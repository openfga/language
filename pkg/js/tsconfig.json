{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules", "**/*.test.ts", "tests"]
}
